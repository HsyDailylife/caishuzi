<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/numb1_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="请输入"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/numb2_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/numb1_et"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="请输入"
        android:inputType="number" />

    <Button
        android:id="@+id/startgame_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numb1_et"
        android:layout_centerHorizontal="true"
        android:onClick="startGame"
        android:text="开始游戏" />

    <EditText
        android:id="@+id/res_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startgame_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="输入你猜的数字"
        android:inputType="number" />

    <Button
        android:id="@+id/submit_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startgame_et"
        android:layout_below="@+id/res_et"
        android:onClick="submit"
        android:text="提交" />

</RelativeLayout>
